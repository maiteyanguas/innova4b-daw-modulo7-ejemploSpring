<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context 
	http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <bean id="peliculaFinderFromText" class="innova4b.ejemploSpring.PeliculaFinderFromText">
        <property name="resource" value ="resources/peliculas.txt"/>
    </bean>
	 
	<bean id="peliculaFinderFromDB" class="innova4b.ejemploSpring.PeliculaFinderFromDB">
    	<constructor-arg ref="connection"/>   
    </bean>
    
    <bean id="connection" class="innova4b.ejemploSpring.ConnectionFactory" factory-method="createConnection">
    	<constructor-arg name="url" value="jdbc:mysql://localhost/movies"/>
    	<constructor-arg name="user" value="root" />
    	<constructor-arg name="pwd" value="root"/>
    </bean>
    
    <bean id="peliculaListerFromText" class="innova4b.ejemploSpring.PeliculaLister">
    	<constructor-arg ref="peliculaFinderFromText"/>
    </bean>
    
    <bean id="peliculaListerFromDB" class="innova4b.ejemploSpring.PeliculaLister">
    	<constructor-arg ref="peliculaFinderFromDB"/>
    </bean>

    

</beans>

